extends layout
block content
		h1.text-center.mt-4.font-weight-bold= 'To-do List'  

		p.text-center= 'Save the most important things in one place'

		a(href="/notes").btn.btn-primary.btn-lg.d-block.w-25.ml-auto.mr-auto.mb-4= 'Add note'
		div.list-group.flex-row.flex-wrap.justify-content-around.w-75.ml-auto.mr-auto  

			- var colors = ['bg-primary', 'bg-secondary', 'bg-success', 'bg-warning', 'bg-info', 'bg-dark']; 

			- for (var x = 0; x < notes.length; x++)

				- var color = colors[Math.floor(Math.random() * (colors.length - 0) + 0)]; // random bg-color for note
				- var id = '/notes/' + notes[x]._id;

				a(href=id)(class=color).list-group-item.list-group-item-action.w-25.m-3.text-white

					div.d-flex.w-100.justify-content-between

						h4.mb-1.font-weight-bold.text-truncate= notes[x].title

					p.mb-1.text-truncate= notes[x].description

