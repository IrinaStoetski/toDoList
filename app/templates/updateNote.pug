extends layout

block content
    form(action="/notess" method='POST')
        div.form-group
            input.form-control(type='text' name='id')
        div.form-group
            label(for="nameNote") Название заметки
            input.form-control#nameNote(type='text' name='title' )
        div.form-group
            label(for="descriptionNote") Описание
            textarea.form-control#descriptionNote(name='description')
        div.form-group
            button.btn.btn-success(type="submit") Сохранить изменения
            button.btn.btn-secondary(type="button") Отмена
            button.btn.btn-danger(type="button") Удалить