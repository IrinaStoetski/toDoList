extends layout

block content
    form(action="/notes/"+notes.id method='POST')
        div.form-group
            label(for="nameNote") Название заметки
            input.form-control#nameNote(type='text' name='title' value=notes.title)
        div.form-group
            label(for="descriptionNote") Описание
            input.form-control#descriptionNote(type='text' name='description' value=notes.description)
        div.form-group
            button.btn.btn-success(type="submit") Сохранить изменения
            button.btn.btn-secondary(type="button") Отмена
            button.btn.btn-danger(type="button") Удалить