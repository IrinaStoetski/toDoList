extends layout

block content
    form#myform( method='post')
        div.form-group
            label(for="nameNote") Название заметки
            input.form-control#nameNote(type='text' name='titleNote' value=titleNote)
        div.form-group
            label(for="descriptionNote") Описание
            textarea.form-control#descriptionNote(type='text' name='description') #{description}
        div.form-group
            button.btn.btn-success(type="submit" onclick='postData()' name="save") Сохранить изменения
            button.btn.btn-secondary#cl(type="submit" name="close") Отмена
            button.btn.btn-danger(type="text" name='delete' formmethod='post' formaction='/notesdel/'+id ) Удалить