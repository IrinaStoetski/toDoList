extends layout

block content
    form(action="/api/notes" method='POST')
        div.form-group
            label(for="nameNote") Название заметки
            input.form-control#nameNote(type='text' name='title' placeholder='Название заметки')
        div.form-group
            label(for="descriptionNote") Описание
            textarea.form-control#descriptionNote(name='description')
        div.form-group
            button.btn.btn-success(type="submit") Создать
            button.btn.btn-secondary(type="button") Отмена